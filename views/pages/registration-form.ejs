<!DOCTYPE html>
<html>
  <head>
    <link href="./css/styleLogin.css" rel="stylesheet" />
    <script src="./js/button.js"></script>
  </head>
  <body>
    <form class="rform" method="POST" action="/register">
      <div class="title">Hi,</div>
      <div class="subtitle">Create a new account</div>
      <div class="form-container">
        <div class="left">
          <div class="input-container ic2">
            <input
              id="email"
              class="input"
              name="email"
              type="text"
              placeholder=" "
            />
            <div class="cut cut-short"></div>
            <label for="email" class="placeholder">Email</label>
          </div>
          <div class="input-container ic1">
            <input
              id="password"
              class="input"
              type="password"
              placeholder=" "
              name="password"
            />
            <div class="cut"></div>
            <label for="password" class="placeholder">Password</label>
          </div>
          <div class="input-container ic1">
            <input
              id="cpassword"
              class="input"
              type="password"
              placeholder=" "
              name="cpassword"
            />
            <div class="cut"></div>
            <label for="cpassword" class="placeholder">Confirm Password</label>
          </div>
          <div class="input-container ic1">
            <input
              name="firstname"
              id="firstname"
              class="input"
              type="text"
              placeholder=" "
            />
            <div class="cut"></div>
            <label for="firstname" class="placeholder">First name</label>
          </div>
          <div class="input-container ic2">
            <input
              name="lastname"
              id="lastname"
              class="input"
              type="text"
              placeholder=" "
            />
            <div class="cut"></div>
            <label for="lastname" class="placeholder">Last name</label>
          </div>
        </div>
        <div class="right">
          <div class="input-container ic2">
            <input
              name="address"
              id="address"
              class="input"
              type="text"
              placeholder=" "
            />
            <div class="cut"></div>
            <label for="address" class="placeholder">Address</label>
          </div>
          <div class="input-container ic2">
            <input
              name="city"
              id="city"
              class="input"
              type="text"
              placeholder=" "
            />
            <div class="cut"></div>
            <label for="city" class="placeholder">City</label>
          </div>
          <div class="input-container ic2">
            <input
              name="state"
              id="state"
              class="input"
              type="text"
              placeholder=" "
            />
            <div class="cut"></div>
            <label for="state" class="placeholder">State</label>
          </div>
          <div class="input-container ic2">
            <input
              name="postalCode"
              id="postalCode"
              class="input"
              type="text"
              placeholder=" "
            />
            <div class="cut"></div>
            <label for="postalCode" class="placeholder">Postal Code</label>
          </div>
          <div class="input-container ic2">
            <input
              name="phone"
              id="phone"
              class="input"
              type="text"
              placeholder=" "
            />
            <div class="cut"></div>
            <label for="phone" class="placeholder">Phone</label>
          </div>
        </div>
      </div>

      <div class="button-container">
        <button type="text" class="submit">submit</button>
      </div>
      <% if (locals.error) { %>
        <div class="alert alert-danger"><%= locals.error %></div>
      <% } %>
        <a class="link" href="/login">want to login</a>
        <br />
        <a href="/" class="link">cancel</button>
        </form>
  </body>
</html>
